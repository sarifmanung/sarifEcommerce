<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    {{!-- ajax --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    {{!-- favicon --}}
    <link rel="icon" href="/img/favicon.png" sizes="32x32" />
    <link rel='stylesheet' id='index-css' href='/css/login_page.css' type='text/css' media='all' />
    <link rel='stylesheet' id='index-css' href='/css/scan-page.css' type='text/css' media='all' />
    <link rel='stylesheet' id='index-css' href='/css/index.css' type='text/css' media='all' />
    <link rel='stylesheet' id='index-css' href='/css/view-user.css' type='text/css' media='all' />
    <link rel='stylesheet' id='index-css' href='/css/register_page.css' type='text/css' media='all' />
    {{!-- use Jquery --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/serratus/quaggaJS/0420d5e0/dist/quagga.min.js"></script>

</head>

<body>
    <!-- Header -->
    <div id="header"></div>
    <!-- Header -->

    <div id="headder-main-body" class="container pt-5 pb-5">
        {{#each rows}}
        <div class="row">
            <div class="col-6 d-flex justify-content-start">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/home" class="text-decoration-none">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">View User</li>
                    </ol>
                </nav>
            </div>
            {{!-- <div class="col-6 d-flex justify-content-end">
                <a href="/edituser/{{this.id}}" type="button" class="btn btn-warning btn-small"><i
                        class="bi bi-pencil"></i><span class="action-icon"> Edit</span>
                </a>
                <a href="/delete/{{this.id}}" type="button" class="btn btn-danger btn-small"><i
                        class="bi bi-trash-fill"></i><span class="action-icon"> Delete</span>
                </a>
            </div> --}}
        </div>

        <div class="p-5">
            <div class="row">
                <div class="col text-center">
                    <h3>{{this.first_name}} {{this.last_name}}</h3>
                </div>
            </div>
        </div>

        {{!-- desktop --}}
        <div class="view-user-desktop">
            {{!-- --}}
            <div class="row mb-5">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="first_name" scope="col">First Name</th>
                                <th scope="col">Last Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary first_name">{{this.first_name}}</td>
                                <td class="text-secondary">{{this.last_name}}</td>
                                <td class="text-secondary">{{this.email}}</td>
                                <td class="text-secondary">{{this.phone_number}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="">Date Of Birth</th>
                                <th scope="col">Expire Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.DOB_format}}</td>
                                <td class="text-secondary">{{this.membership_expire_date_format}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col" class="">NRIC</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.IC}}</td>
                                <td class="text-secondary">{{this.status}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        {{!-- desktop --}}

        {{!-- mobile --}}
        <div class="view-user-mobile">
            {{!-- --}}
            <div class="row mb-0">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">First Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.first_name}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-0">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Last Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.last_name}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-0">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.phone_number}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-0">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.email}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-0">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">NRIC</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.IC}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-0">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Date Of Birth</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.DOB_format}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-0">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Expire Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.membership_expire_date_format}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-0">
                <div class="col">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-secondary">{{this.status}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        {{!-- mobile --}}
        {{/each}}

        <div class="d-grid gap-2">
            <button class="btn btn-primary" onclick="javascript:window.history.back();" type="button">BACK</button>
        </div>
    </div>
    <script type="text/javascript ">
        $('#header').load('/header');
        $('#footer').load('/footer');
  </script>
    {{!-- script --}}
    <script>
        let fullname = document.getElementById("first_name");
        // fullname.style.display = "none"
        fullname.innerHtml = "hello"
    </script>
    {{!-- hide staff --}}
    {{#if hidestaff}}
    <script>
        const staff = document.getElementById('header-staff');
        const search = document.getElementById('navbar-search');
        const btn = document.getElementById('navbar-search-btn');

        staff.style.display = 'none';
        search.style.display = 'none';
        btn.style.display = 'none';
    </script>
    {{/if}}
    {{!-- hide staff --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>

</html>