<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership Edit Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    {{!-- ajax --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    {{!-- favicon --}}
    <link rel="icon" href="/img/favicon.png" sizes="32x32" />
    <link rel='stylesheet' id='index-css' href='/css/index.css' type='text/css' media='all' />
    {{!-- use Jquery --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/serratus/quaggaJS/0420d5e0/dist/quagga.min.js"></script>

</head>

<body>
    <!-- Header -->
    <div id="header"></div>
    <!-- Header -->

    <div id="headder-main-body" class="container pt-5 pb-5">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin-list" class="text-decoration-none">Staff</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit admin</li>
            </ol>
        </nav>

        {{#if check}}
        <div class="text-center mt-4 name">
            <p>{{check}}</p>
        </div>
        {{/if}}
        {{#if alert}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{alert}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}

        {{#each rows}}
        <form class="row g-3 needs-validation" method="POST" action="/editadmin/{{this.id}}">
            {{/each}}
            {{> admin-form}}
        </form>
    </div>

    <script type="text/javascript ">
        $('#header').load('/header');
        $('#footer').load('/footer');
  </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>

</html>