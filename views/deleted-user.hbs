<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Membership</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  {{!-- ajax --}}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  {{!-- favicon --}}
  <link rel="icon" href="/img/favicon.png" sizes="32x32" />
  <link rel='stylesheet' id='index-css' href='/css/index.css' type='text/css' media='all' />
  {{!-- use Jquery --}}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://cdn.rawgit.com/serratus/quaggaJS/0420d5e0/dist/quagga.min.js"></script>

</head>

<body>
  <!-- Header -->
  <div id="header"></div>
  <!-- Header -->

  <div id="headder-main-body" class="container pt-5 pb-5">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/home" class="text-decoration-none">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit User</li>
      </ol>
    </nav>

    {{#if removedUser}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      User has been removed.
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <div class="row">
      <div class="col-6">
        <h1></h1>
      </div>
      <div class="col-6 d-flex justify-content-end">
        {{!-- <a href="/display-hide-user" type="button" class="btn btn-secondary align-self-center">deleted user</a>
        --}}
        <a href="/adduser" type="button" class="btn btn-primary align-self-center"><i
            class="bi bi-person-plus-fill"></i><span class="action-icon"> add
            user</span></a>
      </div>
    </div>

    <table class="table">
      <thead class="thead-dark" style="background-color:#212529; color:#fff;">
        <tr>
          <th scope="col" class="home-table-gray">ID</th>
          <th scope="col" class="home-table-gray">FullName</th>
          <th class="home-desktop-only home-table-gray" scope="col">NRIC</th>
          <th class="home-desktop-only home-table-gray" scope="col">Phone</th>
          <th class="home-desktop-only home-table-gray" scope="col">Email</th>
          {{!-- <th scope="col">Status</th> --}}
          <th scope="col" class="text-end home-table-gray">Action</th>
        </tr>
      </thead>
      <tbody>

        {{#each rows}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td>{{this.first_name}} {{this.last_name}}</td>
          <td class="home-desktop-only">{{this.IC}}</td>
          <td class="home-desktop-only">{{this.phone_number}}</td>
          <td class="home-desktop-only">{{this.email}}</td>
          {{!-- <td>{{this.status}}</td> --}}
          <td class="text-end">
            <a href="/viewuser/{{this.id}}" type="button" class="btn btn-secondary btn-small"><i
                class="bi bi-eye-fill"></i><span class="action-icon"> View</span></a>
            <a href="/edituser/{{this.id}}" type="button" class="btn btn-warning btn-small home-desktop-only-icon"><i
                class="bi bi-pencil-fill"></i><span class="action-icon"> Edit</span>
            </a>
            <a href="/restore/{{this.id}}" type="button" class="btn btn-success btn-small"><i
                class="bi bi-person-fill"></i><span class="action-icon"> Restore</span>
            </a>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>

  <script type="text/javascript ">
        $('#header').load('/header');
        $('#footer').load('/footer');
  </script>

  {{!-- hide staff --}}
  {{#if hidestaff}}
  <script>
    const staff = document.getElementById('header-staff');
    const search = document.getElementById('navbar-search');
    const btn = document.getElementById('navbar-search-btn');

    staff.style.display = 'none';
    search.style.display = 'none';
    btn.style.display = 'none';
  </script>
  {{/if}}
  {{!-- hide staff --}}
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
</body>

</html>