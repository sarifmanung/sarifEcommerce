<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>shopping page</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    {{!-- ajax --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    {{!-- favicon --}}
    <link rel="icon" href="/img/favicon.png" sizes="32x32" />
    <link rel='stylesheet' id='index-css' href='/css/index.css' type='text/css' media='all' />
    {{!-- use Jquery --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/serratus/quaggaJS/0420d5e0/dist/quagga.min.js"></script>

    <style>
        .page-link:hover {
            cursor: pointer;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <nav id="main-navbar" class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="home-table-gray navbar-brand" style="color: #9fa0a2;" href="/shopping">SHOPPING</a>
            {{!-- <a class="home-table-gray navbar-brand" style="color: #9fa0a2;" href="/home">Membership</a> --}}
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active btn btn-dark" style="color: #9fa0a2;" href="/cart" type="button">
                            <i class=""></i><span class=""> CART</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header -->

    <div id="headder-main-body" class="container pt-5 pb-5">
        <div class="row">
            <div class="col-6">
                <h1>SHOP PAGE</h1>
            </div>
        </div>

        <table class="table">
            <thead class="thead-dark" style="background-color:#212529; color:#fff;">
                <tr>
                    <th scope="col" class="home-table-gray action-icon">ID</th>
                    <th scope="col" class="home-table-gray">Name</th>
                    <th scope="col" class="home-table-gray">Description</th>
                    <th class="home-desktop-only home-table-gray" scope="col">Price</th>
                    <th scope="col" class="text-end home-table-gray">จำนวนที่ต้องการ</th>
                </tr>
            </thead>
            <tbody>

                {{#each rows}}
                <tr>
                    <th class="action-icon" scope="row">{{this.product_id}}</th>
                    <td>{{this.product_name}}</td>
                    <td>{{this.description}}</td>
                    <td class="home-desktop-only">{{this.price}}</td>
                    <td class="text-end">
                        <div class="input-div">
                            <input type="number" id="{{this.product_id}}-input-stock_quantity"
                                name="input-stock_quantity" placeholder="0" min="0">
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="float-end">
            <button onclick="next()" type="button" class="btn btn-primary btn-lg btn-block">SUBMIT</button>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous">
        </script>

    <script>
        function next() {


            const item1 = $('#1-input-stock_quantity').val()
            const item2 = $('#2-input-stock_quantity').val()
            const item3 = $('#3-input-stock_quantity').val()
            const item4 = $('#4-input-stock_quantity').val()

            // Convert the string values to numbers
            const quantity1 = parseInt(item1, 10) || 0;
            const quantity2 = parseInt(item2, 10) || 0;
            const quantity3 = parseInt(item3, 10) || 0;
            const quantity4 = parseInt(item4, 10) || 0;

            // Check if the sum of all quantities is greater than 0
            if (quantity1 + quantity2 + quantity3 + quantity4 === 0) {
                alert("Please select at least one item quantity.");
                return;
            }


            $.post("/api/orders", {
                quantity1, quantity2, quantity3, quantity4,
            },
                function (data, status) {
                    alert('submit successfully~')
                    window.location.href = "/shopping";
                }).fail((err) => {
                    console.log(err)
                    alert('Something went wrong!\n' + err.responseText)
                    flagclicked = false;

                });



        }
    </script>

</body>

</html>