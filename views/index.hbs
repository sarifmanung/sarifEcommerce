<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    {{!-- ajax --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    {{!-- favicon --}}
    <link rel="icon" href="/img/favicon.png" sizes="32x32" />
    <link rel='stylesheet' id='index-css' href='/css/login_page.css' type='text/css' media='all' />
    <link rel='stylesheet' id='index-css' href='/css/scan-page.css' type='text/css' media='all' />
    <link rel='stylesheet' id='index-css' href='/css/index.css' type='text/css' media='all' />
    <link rel='stylesheet' id='index-css' href='/css/view-user.css' type='text/css' media='all' />
    <link rel='stylesheet' id='index-css' href='/css/register_page.css' type='text/css' media='all' />
    {{!-- use Jquery --}}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.rawgit.com/serratus/quaggaJS/0420d5e0/dist/quagga.min.js"></script>

</head>

<body>
    <!-- Header -->
    <div id="header"></div>
    <!-- Header -->

    <div id="headder-main-body" class="container pt-5 pb-5">
        <div class="">
            <div class="wrapper">
                <div class="logo">
                    {{!-- <img src="/assets/images/about/Dr Clear Aligners About Us Mobile.jpg" alt=""> --}}
                    <img src="/img/logo-dca.png" alt="">
                </div>
                <div class="text-center mt-4 name" style="color: #013970 ;">
                    DCA
                </div>
                {{#if data}}
                <div class="text-center mt-4 name">
                    <p>{{data}}</p>
                </div>
                {{/if}}
                <form class="p-3 mt-3" method="POST" action="/auth">
                    <div class="form-field d-flex align-items-center">
                        <span class="far fa-user"></span>
                        <input type="text" name="user_name" id="user_name" placeholder="Username" required>
                    </div>
                    <div class="form-field d-flex align-items-center">
                        <span class="fas fa-key"></span>
                        <input type="password" name="password" id="password" placeholder="Password" pattern=".{8,}"
                            title="8 characters minimum" required>
                    </div>
                    {{!-- <button class="btn mt-3" onclick="login(event)">Login</button> --}}
                    <button class="btn mt-3" style="background-color: #013970 ;">Login</button>
                </form>
                {{!-- <div class="text-center fs-6">
                    <a href="#">Forget password?</a> or <a href="#">Sign up</a>
                </div> --}}
            </div>

        </div>

    </div>

    {{#if true}}
    <script>
        let navbar = document.getElementById('main-navbar');
        navbar.style.display = 'none';

        let paddingtop = document.getElementById('headder-main-body');
        paddingtop.style.marginTop = '-70px';

        // hide body-background
        $(document).ready(function () {
            $("body").css('background', 'none');
        });
    </script>
    {{/if}}
    {{!-- hide staff --}}
    {{#if hidestaff}}
    <script>
        const staff = document.getElementById('header-staff');
        const search = document.getElementById('navbar-search');
        const btn = document.getElementById('navbar-search-btn');

        staff.style.display = 'none';
        search.style.display = 'none';
        btn.style.display = 'none';
    </script>
    {{/if}}
    {{!-- hide staff --}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>

</html>